<body>
    <h1>
        Movies page
    </h1>
    <div>
        <%- include ("./partials/header") ;%>  

    </div>
    <ul class="central" id="liste-Movies">
        <% for (movie of movies){%>
           <li>-<%= movie.monTitle %> - <%-movie.monYear %> </li> 
        <% } %> 
    </ul>

    <div>
        <form action="/movies" method="post" id="formulaire" enctype="multipart/form-data">
            <label for="titleMovies">Title :</label><br>
            <input type="text" id="titleMovies" name="titleMovies" value="The last"><br>
            <label for="yearMovies">Year :</label><br>
            <input type="text" id="yearMovies" name="yearMovies" value="2019"><br><br>
            <input type="submit" value="Submit">
          </form> 
    </div>


    <%- include ("./partials/footer")   ;%>

<script src="views/script/posterLeForm.js" ></script>
</body>
